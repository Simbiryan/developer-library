extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') Имя:
      input#first_name.form-control(type='text' placeholder='Иван' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='family_name') Фамилия:
      input#family_name.form-control(type='text' placeholder='Иванов' name='family_name' required='true' value=(undefined===author ? '' : author.family_name))
    div.form-group
      label(for='date_of_birth') Дата рождения:
      input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
    div.form-group
      label(for='date_of_death') Дата смерти:
      input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death) )
    button.btn.btn-primary(type='submit') Отправить
  if errors 
    ul
      for error in errors
        li!= error.msg